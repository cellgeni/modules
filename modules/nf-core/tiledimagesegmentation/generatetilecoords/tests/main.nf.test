// nf-core modules test tiledimagesegmentation/generatetilecoords
nextflow_process {

    name "Test Process TILEDIMAGESEGMENTATION_GENERATETILECOORDS"
    script "../main.nf"
    config "./nextflow.config"
    process "TILEDIMAGESEGMENTATION_GENERATETILECOORDS"

    tag "modules"
    tag "modules_nfcore"
    tag "tiledimagesegmentation"
    tag "tiledimagesegmentation/generatetilecoords"

    test("mouse_heart - tiff") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.modules_testdata_base_path + 'imaging/tiff/mindagap.mouse_heart.wga.tiff', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("mouse_heart - tiff - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test',], // meta map
                    file(params.modules_testdata_base_path + 'imaging/tiff/mindagap.mouse_heart.wga.tiff', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
